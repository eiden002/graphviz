<fieldset>
  <legend><%= l(:label_plugin_settings) %></legend>
  <p>
    <label><%= l(:label_allow_includes) %></label>
    <%= check_box_tag 'settings[allow_includes]', 1, @settings['allow_includes'] %>
  </p> <p>
    <label><%= l(:label_cache_expiration) %></label>
    <%= text_field_tag 'settings[cache_seconds]', @settings['cache_seconds'], size: 10, disabled: true %> <%= l(:text_cache_expiration_unit) %>
  </p>
  <p>
    <label><%= l(:label_graphviz_binary) %></label>
    <%= text_field_tag 'settings[graphviz_binary_default]', @settings['graphviz_binary_default'], size: 60 %>
  </p>

</fieldset>
